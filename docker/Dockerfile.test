FROM node:alpine3.10

RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get -y install autoconf automake libtool nasm make pkg-config git apt-utils

RUN mkdir -p /app
WORKDIR /app

COPY package.json /
COPY yarn.lock /

RUN yarn install

COPY . /

EXPOSE 3000

# Environment variables
ENV NODE_ENV test

CMD ["yarn", "testmocha"]