{
  "name": "fatboar",
  "version": "1.0.0",
  "description": "Game for the restaurant fatboar",
  "author": {
    "name": "Carlos Olmedo"
  },
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "dev:server": "cd client && yarn build && cd .. && yarn start",
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://carlossit@bitbucket.org/furiousduck/fatboard.git"
  },
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ]
}
